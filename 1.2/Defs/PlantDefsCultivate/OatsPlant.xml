<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>RawOats</defName>
    <label>Oats</label>
    <description>Cereal grain used for livestock feed, cooked for food.</description>
    <graphicData>
      <texPath>Things/Item/Resource/RawFoods/Cereal/Oats</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
    </ingestible>
    <thingCategories>
      <li>Cereal</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>90</daysToRotStart>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>RawBarley</defName>
    <label>Barley</label>
    <description>Cereal grain used for livestock feed, cooked for food, and can be brewed into beer wort</description>
    <graphicData>
      <texPath>Things/Item/Resource/RawFoods/Cereal/Barley</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.1</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
    </ingestible>
    <thingCategories>
      <li>Cereal</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>90</daysToRotStart>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Oat</defName>
    <label>Oat Plant</label>
    <description>One of the first crops to be demesticated by Humans. This staple crop has provided humanity with the nutrients neccessary for growth through the ages.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Oat/Oatgrown</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawOats</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <topWindExposure>0.35</topWindExposure>
      <growDays>4.2</growDays>
      <immatureGraphicPath>Things/Plant/Oat/Oat_Immature</immatureGraphicPath>
      <visualSizeRange>0.3~1.3</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Barley</defName>
    <label>Barley Plant</label>
    <description>One of the first crops to be demesticated by Humans. This staple crop has provided humanity with the nutrients neccessary for growth through the ages. Can be used to brew beer</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Nutrition>0.3</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Barley/Barleygrown</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible />
    <plant>
      <fertilityMin>0.70</fertilityMin>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawBarley</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <topWindExposure>0.35</topWindExposure>
      <growDays>4.2</growDays>
      <immatureGraphicPath>Things/Plant/Barley/Barley_Immature</immatureGraphicPath>
      <visualSizeRange>0.3~1.3</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
</Defs>
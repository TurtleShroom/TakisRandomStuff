<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Stone Tables-->
  <ThingDef ParentName="BenchBase">
    <defName>StoneWorkingStation</defName>
    <label>Stone Working Station</label>
    <description>A stone table with simple stone tools used for cutting stone chunks into usable blocks and creating stone weapons and tools.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Buildings/Neolithic/StoneChippingBlock/StoneChippingBlock</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.15,1.15)</drawSize>
      <shadowData>
        <volume>(0.95, 0.3, 0.62)</volume>
        <offset>(0, 0, 0.20)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-5</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <designationHotKey>Misc9</designationHotKey>
  </ThingDef>
  <ThingDef ParentName="BenchBase">
    <defName>StoneButhersBlock</defName>
    <label>Stone Buthers Block</label>
    <description>A heavy table for butchering dead creatures into pieces of raw meat.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Buildings/Neolithic/StoneButcherBlock/ButchersStone</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.15,1.15)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-15</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>ButcherCorpseFlesh</li>
      <li>Make_Kibble</li>
      <li>Make_CuredMeat</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <designationHotKey>Misc3</designationHotKey>
  </ThingDef>
  <ThingDef ParentName="BenchBase">
    <defName>StoneResearchBlock</defName>
    <label>Stone research block</label>
    <description>A simple stone table with pestel mortar for grinding herbs scones and mixing liquids. Also a tablet for recording observations. Researchers work here to discover new things.</description>
    <thingClass>Building_ResearchBench</thingClass>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <graphicData>
      <texPath>Buildings/Neolithic/StoneResearchBlock/StoneResearchBlock</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.15,1.15)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>2800</WorkToBuild>
      <Flammability>1.0</Flammability>
      <ResearchSpeedFactor>0.5</ResearchSpeedFactor>
    </statBases>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <designationCategory>Production</designationCategory>
    <surfaceType>Item</surfaceType>
  </ThingDef>
</Defs>

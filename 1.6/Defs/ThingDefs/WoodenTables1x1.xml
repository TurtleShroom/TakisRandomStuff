  <ThingDef ParentName="BenchBase">
    <defName>SmallWoodenResearchTable</defName>
    <label>Small Wooden Research Table</label>
    <description>A simple stone table with pestel mortar for grinding herbs scones and mixing liquids. Also a tablet for recording observations. Researchers work here to discover new things.</description>
    <thingClass>Building_ResearchBench</thingClass>
    <size>(1,1)</size>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <graphicData>
      <texPath>Buildings/Production/ResearchTable/ResearchTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.15,1.15)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>

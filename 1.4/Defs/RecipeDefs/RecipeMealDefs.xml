<Defs>
  <RecipeDef ParentName="CookMealBase">
    <defName>CookPotOfPorridge</defName>
    <label>cook a pot of Porridge for five</label>
    <description>Cook a pot of porridge enough nutrients for five people.</description>
    <jobString>Cooking a pot porridge.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <unfinishedThingDef>ClayCookingPot</unfinishedThingDef>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Cereal</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <BowlOfPorridge>5</BowlOfPorridge>
    </products>
    <workSkill>Cooking</workSkill>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
      <li>Campfire</li>
    </recipeUsers>
  </RecipeDef>
